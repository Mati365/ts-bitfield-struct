{
  "compilerOptions": {
    "module": "umd",
    "target": "es2015",
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "outDir": "dist/"
  },
  "include": [
    "src/*.ts"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}
